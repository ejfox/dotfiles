#!/bin/bash
# =============================================================================
# DOTFILES PRE-COMMIT HOOK - SECRET DETECTION
# =============================================================================
# Prevents committing files that likely contain secrets.
# Install: git config core.hooksPath .githooks
# =============================================================================

RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

echo -e "${YELLOW}◆ Scanning for secrets...${NC}"

BLOCKED=0

# -----------------------------------------------------------------------------
# PATTERN 1: Dangerous file paths that should NEVER be committed
# -----------------------------------------------------------------------------
DANGEROUS_PATHS=(
    ".netrc"
    ".authinfo"
    ".pgpass"
    ".git-credentials"
    ".npmrc"
    ".pypirc"
    ".aws/credentials"
    ".docker/config.json"
    "credentials.json"
    ".electrum/"
    ".bitcoin/"
    ".ethereum/"
    ".gnupg/private"
    ".gnupg/secring"
    ".httpie/"
    ".irssi/config"
    "id_rsa"
    "id_ed25519"
    "id_ecdsa"
)

for pattern in "${DANGEROUS_PATHS[@]}"; do
    if git diff --cached --name-only | grep -qE "$pattern"; then
        echo -e "${RED}✗ BLOCKED: File matching '$pattern' staged for commit${NC}"
        BLOCKED=1
    fi
done

# -----------------------------------------------------------------------------
# PATTERN 2: Content patterns that indicate secrets
# -----------------------------------------------------------------------------
# Check staged file contents for secret patterns
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)

if [ -n "$STAGED_FILES" ]; then
    # Patterns to detect in file contents
    SECRET_PATTERNS=(
        'sk-[a-zA-Z0-9]{20,}'           # OpenAI/Anthropic API keys
        'sk-ant-[a-zA-Z0-9-]{20,}'      # Anthropic specific
        'sk-proj-[a-zA-Z0-9-]{20,}'     # OpenAI project keys
        'sk-or-[a-zA-Z0-9-]{20,}'       # OpenRouter keys
        'ghp_[a-zA-Z0-9]{36}'           # GitHub personal access tokens
        'gho_[a-zA-Z0-9]{36}'           # GitHub OAuth tokens
        'ghs_[a-zA-Z0-9]{36}'           # GitHub server tokens
        'github_pat_[a-zA-Z0-9_]{22,}'  # GitHub fine-grained PATs
        'xox[baprs]-[a-zA-Z0-9-]+'      # Slack tokens
        'AKIA[0-9A-Z]{16}'              # AWS access key IDs
        'AIza[0-9A-Za-z_-]{35}'         # Google API keys
        'ya29\.[0-9A-Za-z_-]+'          # Google OAuth tokens
        'eyJ[a-zA-Z0-9_-]*\.eyJ'        # JWT tokens (be careful - can have false positives)
        'password\s*[:=]\s*["\047][^"\047]{8,}' # password assignments
        'apikey\s*[:=]\s*["\047][^"\047]{8,}'   # apikey assignments
        'api_key\s*[:=]\s*["\047][^"\047]{8,}'  # api_key assignments
        'secret\s*[:=]\s*["\047][^"\047]{8,}'   # secret assignments
        'token\s*[:=]\s*["\047][^"\047]{8,}'    # token assignments
        'rpcpassword.*[:=]'             # RPC passwords (like electrum)
        'BEGIN (RSA |DSA |EC |OPENSSH )?PRIVATE KEY' # Private keys
        'BEGIN PGP PRIVATE KEY'         # PGP private keys
    )

    for file in $STAGED_FILES; do
        # Skip binary files and certain safe files
        if file "$file" 2>/dev/null | grep -q "text"; then
            for pattern in "${SECRET_PATTERNS[@]}"; do
                if git show ":$file" 2>/dev/null | grep -qE "$pattern"; then
                    echo -e "${RED}✗ BLOCKED: Potential secret in '$file' matching pattern${NC}"
                    echo -e "${YELLOW}  Pattern: $pattern${NC}"
                    # Show the matching line (redacted)
                    MATCH=$(git show ":$file" | grep -oE "$pattern" | head -1)
                    if [ ${#MATCH} -gt 20 ]; then
                        REDACTED="${MATCH:0:10}...REDACTED...${MATCH: -4}"
                        echo -e "${YELLOW}  Found: $REDACTED${NC}"
                    fi
                    BLOCKED=1
                fi
            done
        fi
    done
fi

# -----------------------------------------------------------------------------
# PATTERN 3: Files with suspicious extensions
# -----------------------------------------------------------------------------
SUSPICIOUS_EXTENSIONS=(
    "\.pem$"
    "\.key$"
    "\.p12$"
    "\.pfx$"
    "\.secret$"
    "\.secrets$"
)

for ext in "${SUSPICIOUS_EXTENSIONS[@]}"; do
    if git diff --cached --name-only | grep -qE "$ext"; then
        echo -e "${RED}✗ BLOCKED: File with sensitive extension '$ext' staged${NC}"
        BLOCKED=1
    fi
done

# -----------------------------------------------------------------------------
# RESULT
# -----------------------------------------------------------------------------
if [ $BLOCKED -eq 1 ]; then
    echo ""
    echo -e "${RED}═══════════════════════════════════════════════════════════════${NC}"
    echo -e "${RED}COMMIT BLOCKED - Potential secrets detected${NC}"
    echo -e "${RED}═══════════════════════════════════════════════════════════════${NC}"
    echo ""
    echo "Options:"
    echo "  1. Remove the file: git reset HEAD <file>"
    echo "  2. Add to .gitignore and remove: git rm --cached <file>"
    echo "  3. If this is a false positive, use: git commit --no-verify"
    echo ""
    echo "Remember: Once a secret is in git history, consider it compromised."
    echo ""
    exit 1
fi

echo -e "${GREEN}✓ No secrets detected${NC}"
exit 0
