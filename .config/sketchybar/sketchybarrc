##### Battery #####
sketchybar --add item battery right \
  --set battery update_freq=10 \
  script="$HOME/.config/sketchybar/plugins/battery.sh" \
  click_script="pmset -g batt"

##### Time #####
sketchybar --add item clock right \
  --set clock update_freq=1 \
  label.width=58 \
  script="$HOME/.config/sketchybar/plugins/clock.sh"

###### Next Todo #####
#sketchybar --add item task right \
#  --set task update_freq=300 \
#  position=right \
#  script="$HOME/.config/sketchybar/plugins/top_task.sh"

##### Words Today/Month #####
sketchybar --add item words right \
  --set words update_freq=60 \
  script="$HOME/.config/sketchybar/plugins/words.sh" \
  click_script="open https://ejfox.com/blog" \
  --subscribe words system_woke

##### Creative Stats (left side, hidden when meetings) #####
sketchybar --add item demos left \
  --set demos update_freq=120 \
  drawing=off \
  script="$HOME/.config/sketchybar/plugins/demos.sh" \
  click_script="open ~/demos"

sketchybar --add item notes left \
  --set notes update_freq=120 \
  drawing=off \
  script="$HOME/.config/sketchybar/plugins/notes.sh" \
  click_script="open 'obsidian://open?vault=ejfox'"

